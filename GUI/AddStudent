    private void jButton1ActionPerformed(java.awt.event.ActionEvent evt) {                                         

        CRS.dbConnection conn = CRS.dbConnection.getdbConnection();
         String name =  jTextField1.getText();
         String pass = jTextField2.getText();
         boolean f = true;
        try {
            this.s = conn.getStatement();
          f =  s.execute( "insert into users values('" + name + "','" + pass+ "','" +1+ "')");
          if (f == false){
              JOptionPane.showMessageDialog(rootPane, "Done Added Student Successfully", "Add Employee", 1);
          }else if(f == true){
              JOptionPane.showMessageDialog(rootPane, "Added Student Error", "Add Employee", 1);
          }
        } catch (Exception ex) {
              JOptionPane.showMessageDialog(rootPane, "Added Student Error", "Add Employee", 1);
        }
    
       
    }                                        
    
